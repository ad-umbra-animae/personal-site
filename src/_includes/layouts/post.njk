<!doctype html>
<html lang="{{ page.lang or 'en' }}" class="bg-white text-gray-900" id="top">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{{ title }} — {{ category | default("Blog") }} — Eidolon Aeon</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="min-h-screen flex flex-col">
  <!-- Top navigation (includes category Home + prev/next + Top) -->
<header class="border-b">
  <div class="mx-auto max-w-5xl px-4 py-4 flex items-center justify-between">
    <a href="/" class="text-xl font-semibold tracking-tight">Eidolon Aeon</a>
    {% include "partials/nav.njk" %}
  </div>
  <div class="mx-auto max-w-5xl px-4 pb-4">
    {% PrevNext collectionName, page %}
  </div>
</header>

  <main class="flex-1">
    <article class="mx-auto max-w-3xl px-4 py-10 prose lg:prose-xl">
      <header class="not-prose mb-6">
        <h1 class="text-3xl font-bold leading-tight">{{ title }}</h1>
        <p class="text-sm text-gray-500">
          {{ date | date("LLL d, yyyy") }}
          • {{ content | readingTime }}
          • ~{{ content | wordCount }} words
        </p>
      </header>

      {# ————— Post body ————— #}
      {{ content | safe }}

      {# ————— Tags ————— #}
      {% if tags %}
      <section class="not-prose mt-10">
        <h3 class="text-base font-semibold mb-3">Tags</h3>
        <ul class="flex flex-wrap gap-2">
          {% for t in tags | filterTagList %}
          <li>
            <a rel="tag" href="/tags/{{ t | slug }}/"
              class="inline-flex items-center rounded-full border px-3 py-1 text-xs hover:bg-gray-50">
              {{ t }}
            </a>
          </li>
          {% endfor %}
        </ul>
      </section>
      {% endif %}
    </article>
  </main>

  <!-- Bottom navigation (same as top + ↑ Top) -->
  <nav class="border-t">
    <div class="mx-auto max-w-5xl px-4 py-6">
      {% PrevNext collectionName, page %}
    </div>
  </nav>

  <footer class="border-t">
    <div class="mx-auto max-w-5xl px-4 py-6 text-sm">
      © <span id="year"></span> Eidolon Aeon
    </div>
    <script>document.getElementById('year').textContent = new Date().getFullYear()</script>
  </footer>
</body>
</html>